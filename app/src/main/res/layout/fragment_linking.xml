<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.LinkingFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linking_header"
            app:layout_constraintTop_toTopOf="parent">

        <Button
                android:id="@+id/linking_return_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:icon="@android:drawable/ic_menu_revert"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/linking_question_field"
            app:layout_constraintVertical_weight="1"
            app:layout_constraintTop_toBottomOf="@id/linking_header"
            app:layout_constraintBottom_toTopOf="@+id/linking_answer_field"
            android:hint="@string/linking_hint">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/linking_question_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textMultiLine"
                android:gravity="top"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
            android:id="@+id/linking_answer_field"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/linking_question_field"
            app:layout_constraintBottom_toTopOf="@id/linking_submit_button"
            app:layout_constraintVertical_weight="1"
            android:padding="20dp"
            android:lineSpacingMultiplier="1.2"/>

    <Button
            android:id="@+id/linking_submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/linking_answer_field"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="@string/linking_submit"/>
</androidx.constraintlayout.widget.ConstraintLayout>